<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mode"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mad.gp04.magicbooksss.GameModeActivity"
    tools:showIn="@layout/activity_game_mode">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Survival Mode"
        android:id="@+id/button10"
        android:onClick="survival"
        android:background="#00ffffff"
        android:textSize="30dp"
        android:textColor="#9a7b69"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/mutebutton"
        android:soundEffectsEnabled="false"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Attack"
        android:id="@+id/button11"
        android:onClick="timeattack"
        android:background="#00ffffff"
        android:textSize="30dp"
        android:textColor="#9a7b69"
        android:layout_below="@+id/button10"
        android:layout_alignRight="@+id/button12"
        android:soundEffectsEnabled="false"
        android:layout_alignEnd="@+id/button12"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relax Mode"
        android:id="@+id/button12"
        android:onClick="relax"
        android:background="#00ffffff"
        android:textSize="30dp"
        android:textColor="#9a7b69"
        android:layout_below="@+id/button11"
        android:soundEffectsEnabled="false"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEARNING MODE"
        android:id="@+id/button13"
        android:onClick="learn"
        android:background="#00ffffff"
        android:textSize="30dp"
        android:textColor="#9a7b69"
        android:layout_below="@+id/button12"
        android:layout_alignRight="@+id/button10"
        android:soundEffectsEnabled="false"
        android:layout_alignEnd="@+id/button10"
        android:textStyle="bold" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/mutebutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:soundEffectsEnabled="false"
        android:src="@drawable/soundoff"/>

</RelativeLayout>
