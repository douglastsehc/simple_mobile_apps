<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mad.gp04.magicbooksss.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:onClick="Game"
        android:id="@+id/button"
        android:background="#00ffffff"
        android:textColor="#9a7b69"
        android:fontFamily="HanziPen SC "
        android:textStyle="bold"
        android:textSize="23dp"
        android:soundEffectsEnabled="false"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story"
        android:id="@+id/button2"
        android:onClick="Story"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_below="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:background="#00ffffff"
        android:textColor="#9a7b69"
        android:fontFamily="HanziPen SC "
        android:soundEffectsEnabled="false"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:onClick="Us"
        android:id="@+id/button3"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:textStyle="italic"
        android:soundEffectsEnabled="false"
        android:textColor="#9a7b69"
        android:layout_below="@+id/button9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to play"
        android:id="@+id/button6"
        android:onClick="howtoplay"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:textColor="#9a7b69"
        android:soundEffectsEnabled="false"
        android:fontFamily="HanziPen SC " />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT GAME"
        android:id="@+id/button9"
        android:onClick="exit"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:textStyle="bold"
        android:textColor="#9a7b69"
        android:fontFamily="HanziPen SC "
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:soundEffectsEnabled="false"
        android:layout_alignEnd="@+id/button2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/mutebutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:soundEffectsEnabled="false"
        android:src="@drawable/soundoff"/>

</RelativeLayout>
